# Core config
SHOPEE_DOMAIN=shopee.com.br
HEADLESS=false
STORAGE_STATE=storage_state.json
USER_DATA_DIR=.user-data
DATA_DIR=data

# Profiles (optional)
# Give each account a dedicated browser profile dir: .user-data/profiles/<PROFILE_NAME>
PROFILE_NAME=

# Browser selection (optional)
# Set to 'chrome' to use your locally installed Chrome Stable via Playwright channel.
# Leave empty to use Playwright's bundled Chromium.
BROWSER_CHANNEL=chrome
# Or set a direct executable path (takes precedence over channel)
# macOS example: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Windows example: C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe
BROWSER_EXECUTABLE_PATH='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome'

# Locale/Timezone
LOCALE=pt-BR
TIMEZONE=America/Sao_Paulo

# Throttling
REQUESTS_PER_MINUTE=60
MIN_DELAY=1.0
MAX_DELAY=2.5
# Reciclagem: relançar após N páginas/PDPs (apenas quando CDP lança Chrome)
PAGES_PER_SESSION=50

# Proxy (optional) e.g. http://user:pass@host:port or socks5://host:port
PROXY_URL=

# Behavior/hardening
# Reuse the same persistent Chrome profile for search (recommended to reduce CAPTCHA)
USE_PERSISTENT_CONTEXT_FOR_SEARCH=true
# Try to avoid third‑party cookie phaseout (some CAPTCHA providers need 3P cookies)
DISABLE_3PC_PHASEOUT=true

# CDP (Chrome DevTools Protocol)
# Port for --remote-debugging-port; change if already in use
CDP_PORT=9222
# Comma-separated regexes for URL filtering (defaults to /api/v4/pdp/get_pc)
CDP_FILTER_PATTERNS=