# Core config
SHOPEE_DOMAIN=shopee.com.br
HEADLESS=false
STORAGE_STATE=storage_state.json
USER_DATA_DIR=.user-data
DATA_DIR=data

# Browser selection (optional)
# Set to 'chrome' to use your locally installed Chrome Stable via Playwright channel.
# Leave empty to use Playwright's bundled Chromium.
BROWSER_CHANNEL=chrome
# Or set a direct executable path (takes precedence over channel)
# macOS example: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Windows example: C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe
BROWSER_EXECUTABLE_PATH='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome'

# Locale/Timezone
LOCALE=pt-BR
TIMEZONE=America/Sao_Paulo

# Throttling
REQUESTS_PER_MINUTE=60
MIN_DELAY=1.0
MAX_DELAY=2.5

# Proxy (optional) e.g. http://user:pass@host:port or socks5://host:port
PROXY_URL=
